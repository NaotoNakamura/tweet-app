<h1>詳細</h1>
<div><%= @post.body %></div>
<%= @post.created_at %>

<h2>コメント一覧</h2>
<% @post.comments.each do |comment| %>
  <div>
    <%= comment.body %>
    <%= comment.created_at %>
    <% if comment.user_id === current_user.id %>
      <%= link_to "削除", post_comment_path(comment.post, comment), data: { turbo_method: :delete } %>
    <% end %>
  </div>
<% end %>

<h2>コメント投稿</h2>
<%= form_with model: [@post, @comment] do |f| %>
  <%= f.text_field :body %>
  <%= f.submit 'コメントする' %>
<% end %>

